<!DOCTYPE html>
<html lang="cs">
<head>
    <title>Unicorn Admin</title>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    {control css}
</head>
<body>
<div id="header">
    <h1 style="background: url('{!$basePath}/images/logo.png') no-repeat center; background-size: contain;">
        <a n:href="Default:">Dom≈Ø</a>
    </h1>
    <a id="menu-trigger" href="#">
        <i class="icon-align-justify"></i>
    </a>
</div>


<div id="user-nav">
    <ul class="btn-group">

        <li class="btn">
            <a title="" href="#">
                <i class="icon-user"></i> <span class="text">Profile</span>
            </a>
        </li>

        <li class="btn dropdown" id="menu-messages">

            <a href="#" data-toggle="dropdown" data-target="#menu-messages" class="dropdown-toggle">
                <i class="icon-envelope"></i>
                <span class="text">Messages</span>
                <span class="label label-danger">5</span>
                <b class="caret"></b>
            </a>

            <ul class="dropdown-menu">
                <li>
                    <a class="sAdd" title="" href="#">new message</a>
                </li>
                <li>
                    <a class="sInbox" title="" href="#">inbox</a>
                </li>
                <li>
                    <a class="sOutbox" title="" href="#">outbox</a>
                </li>
                <li>
                    <a class="sTrash" title="" href="#">trash</a>
                </li>
            </ul>
        </li>

        <li class="btn">
            <a title="" href="#">
                <i class="icon-cog"></i>
                <span class="text">Settings</span>
            </a>
        </li>

        <li class="btn">
            <a title="" n:href="Sign:out">
                <i class="icon-share-alt"></i>
                <span class="text">Logout</span>
            </a>
        </li>

    </ul>
</div>

<div id="sidebar">
    <ul>

        <li n:foreach="$mainMenu as $name => $values"
            class="{if $presenter->isLinkCurrent($values[current])}active{/if} {ifset $values[submenu]}submenu{/ifset}">

            <a n:href="$values['link']">
                <i class="icon {$values[icon]}"></i>
                <span>{$name}</span>
                <span class="label" n:ifset="$values[submenu]">
                    {count($values[submenu])}
                </span>
            </a>

            <ul n:ifset="$values[submenu]">
                <li n:foreach="$values[submenu] as $subName => $subValues"
                    n:class="$presenter->isLinkCurrent($subValues['current']) ? 'active'">
                    <a n:href="$subValues['link']">
                        <span>{$subName}</span>
                    </a>
                </li>
            </ul>

        </li>

    </ul>

</div>

<div id="content">
<div id="content-header">
    <h1>Dashboard</h1>
    <ul class="mini-stats box-3">
        <li>
            <div class="left sparkline_bar_good"><span>2,4,9,7,12,10,12</span>+10%</div>
            <div class="right">
                <strong>36094</strong>
                Visits
            </div>
        </li>
        <li>
            <div class="left sparkline_bar_neutral"><span>20,15,18,14,10,9,9,9</span>0%</div>
            <div class="right">
                <strong>1433</strong>
                Users
            </div>
        </li>
        <li>
            <div class="left sparkline_bar_bad"><span>3,5,9,7,12,20,10</span>+50%</div>
            <div class="right">
                <strong>8650</strong>
                Orders
            </div>
        </li>
    </ul>
</div>
<div id="breadcrumb">
    <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a>
    <a href="#" class="current">Dashboard</a>
</div>

    {include content}

</div>
<div class="row">
    <div id="footer" class="col-xs-12">
        2012 - 2013 &copy; Unicorn Admin. Brought to you by <a href="https://wrapbootstrap.com/user/diablo9983">diablo9983</a>
    </div>
</div>

{control js}
</body>
</html>
