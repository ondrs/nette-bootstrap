<!DOCTYPE html>
<html lang="cs">
<head>
    <title>Administrace</title>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    {control css}
</head>
<body>
<div id="header">
    <h1 style="background: url('{!$basePath}/images/logo.png') no-repeat center; background-size: contain;">
        <a n:href="Default:">Domů</a>
    </h1>
    <a id="menu-trigger" href="#">
        <i class="icon-align-justify"></i>
    </a>
</div>


<div id="user-nav">
    <ul class="btn-group">

        <li class="btn">
            <a title="" href="#">
                <i class="icon-cog"></i>
                <span class="text">Nastavení</span>
            </a>
        </li>

        <li class="btn">
            <a title="" n:href="Sign:out">
                <i class="icon-share-alt"></i>
                <span class="text">Odhlásit se</span>
            </a>
        </li>

    </ul>
</div>

<div id="sidebar">
    <ul>

        <li n:foreach="$mainMenu as $name => $values"
            class="{if $presenter->isLinkCurrent($values[current])}active{/if} {ifset $values[submenu]}submenu{/ifset}">

            <a n:href="$values['link']">
                <i class="icon {$values[icon]}"></i>
                <span>{$name}</span>
                <span class="label" n:ifset="$values[submenu]">
                    {count($values[submenu])}
                </span>
            </a>

            <ul n:ifset="$values[submenu]">
                <li n:foreach="$values[submenu] as $subName => $subValues"
                    n:class="$presenter->isLinkCurrent($subValues['current']) ? 'active'">
                    <a n:href="$subValues['link']">
                        <span>{$subName}</span>
                    </a>
                </li>
            </ul>

        </li>

    </ul>

</div>

<div id="content">
<div id="content-header">
    <h1>{$title}</h1>
</div>
<div id="breadcrumb">
    <a n:href="Default:" title="Go to Home" class="tip-bottom">
        <i class="icon-home"></i>
        Domů
    </a>
    <a href="#" class="current">
        {$title}
    </a>
</div>

    {include content}

</div>
<div class="row">
    <div id="footer" class="col-xs-12">
        2014 &copy; <a href="http://www.ondraplsek.cz" target="_blank">Ondřej Plšek</a><br>
        2012 - 2013 &copy; Unicorn Admin. Brought to you by <a href="https://wrapbootstrap.com/user/diablo9983">diablo9983</a>
    </div>
</div>

{control js}
</body>
</html>
